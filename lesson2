def tokenize(string): 
    return ''.join(re.findall('[\w|\d]+', string))

ALL_CHARACTER = tokenize(all_content)
len(ALL_CHARACTER)

from collections import Counter
L = [1, 1, 2, 3, 4, 4, 4]
